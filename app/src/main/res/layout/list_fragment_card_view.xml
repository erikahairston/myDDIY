<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/cardview_relative_layout_list_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/list_item_selector"
    >
    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/list_fragment_pic"
        android:layout_width="80dp"
        android:layout_height="80dp">

    </com.facebook.login.widget.ProfilePictureView>

    <TextView
        android:id="@+id/list_fragment_task_name"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toEndOf="@id/list_fragment_pic"
        android:text="@string/default_cardview_task_name"
        android:textColor="@color/primary_text"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/list_fragment_task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:text="Date due"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/list_fragment_task_detail"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/list_fragment_task_name"
        android:layout_below="@id/list_fragment_task_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/task_details"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/list_fragment_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/list_fragment_task_date"
        android:layout_marginEnd="16dp"
        android:text="Time"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"/>

</RelativeLayout>
