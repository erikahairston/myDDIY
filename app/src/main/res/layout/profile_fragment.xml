<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/profile_fragment_image_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/balloons"
        />

    <FrameLayout
        android:id="@+id/profile_image_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_fragment_image_view"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >

        <ImageView
            android:id="@+id/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:elevation="6dp"
            android:src="@drawable/square_border"/>

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:elevation="6dp"
            />
    </FrameLayout>


    <RatingBar
        android:id="@+id/average_rating_show_text"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_fragment_image_view"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"/>

    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@id/profile_image_frame"
        android:layout_marginLeft="23dp"
        android:background="@android:color/transparent"
        android:elevation="6dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/edit_profile"/>

    <TextView
        android:id="@+id/college_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_fragment_image_view"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/white"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_school_black_24dp"
        android:gravity="center|start"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/profile_fragment_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/college_text_view"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/white"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_local_post_office_black_24dp"
        android:gravity="center|start"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:text="ashleyxue529@gmail.com"
        android:paddingTop="15dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

 <!--   <TextView
        android:id="@+id/profile_fragment_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/college_text_view"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@id/profile_fragment_email"
        android:background="@android:color/white"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_phone_android_black_24dp"
        android:gravity="center|start"
        android:paddingBottom="15dp"
        android:text="ashleyxue529@gmail.com"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"/> -->

    <TextView
        android:id="@+id/about_me_show_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_fragment_email"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_face_black_24dp"
        android:gravity="center|start"
        android:paddingBottom="85dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:text="About you"
        android:paddingTop="15dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/accept_person_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/about_me_show_text"
        android:background="@drawable/accept_doer_button_selector"
        android:text="@string/accept_doer"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"/>
</RelativeLayout>
